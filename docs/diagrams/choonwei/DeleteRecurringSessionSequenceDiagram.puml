@startuml
!include style.puml

box Logic LOGIC_COLOR_T1
participant ":LogicManager" as LogicManager LOGIC_COLOR
participant ":AddressBookParser" as AddressBookParser LOGIC_COLOR
participant ":DeleteRecurringSessionCommandParser" as DeleteRecurringSessionCommandParser LOGIC_COLOR
participant ":AddSessionCommand" as AddSessionCommand LOGIC_COLOR
participant ":CommandResult" as CommandResult LOGIC_COLOR
end box

box Model MODEL_COLOR_T1
participant ":Model" as Model MODEL_COLOR
end box

[-> LogicManager : execute(...)
activate LogicManager

LogicManager -> AddressBookParser : parseCommand(...)
activate AddressBookParser

create DeleteRecurringSessionCommandParser
AddressBookParser -> DeleteRecurringSessionCommandParser
activate DeleteRecurringSessionCommandParser

DeleteRecurringSessionCommandParser --> AddressBookParser
deactivate DeleteRecurringSessionCommandParser

AddressBookParser -> DeleteRecurringSessionCommandParser: parse(...)
activate DeleteRecurringSessionCommandParser

create AddSessionCommand
DeleteRecurringSessionCommandParser -> AddSessionCommand
activate AddSessionCommand

AddSessionCommand --> DeleteRecurringSessionCommandParser
deactivate AddSessionCommand

DeleteRecurringSessionCommandParser --> AddressBookParser
deactivate DeleteRecurringSessionCommandParser

'Hidden arrow to position the destroy marker slightly below the end of the activation bar.
DeleteRecurringSessionCommandParser -[hidden]-> AddressBookParser
destroy DeleteRecurringSessionCommandParser

AddressBookParser --> LogicManager
deactivate AddressBookParser

LogicManager -> AddSessionCommand : execute()
activate AddSessionCommand

AddSessionCommand -> Model : hasName(studentName)
activate Model
deactivate Model

AddSessionCommand -> Model : getStudentWithName(studentName)
activate Model
deactivate Model

AddSessionCommand -> Model : deleteSessionInRecurringSession\n(studentName, targetIndex, sessionDate)
activate Model
deactivate Model

create CommandResult
AddSessionCommand -> CommandResult
activate CommandResult

CommandResult --> AddSessionCommand
deactivate CommandResult

AddSessionCommand --> LogicManager : result
deactivate AddSessionCommand

[<--LogicManager
deactivate LogicManager
@enduml
